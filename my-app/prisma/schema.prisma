generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  password    String
  role        String       @default("user") // "user" | "admin" | "feedback"
  ratings     Rating[]     @relation("UserRatings")
}


model Profile {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  photoUrl  String?
  createdAt DateTime @default(now())
  ratings   Rating[]
}

model Rating {
  id        Int      @id @default(autoincrement())
  profile   Profile  @relation(fields: [profileId], references: [id])
  profileId Int
  user      User     @relation("UserRatings", fields: [userId], references: [id])
  userId    Int
  q1        Float
  q2        Float
  q3        Float
  q4        Float
  q5        Float
  createdAt DateTime @default(now())
}

model RatingPeriod {
  id        Int      @id @default(autoincrement())
  startDate DateTime
  endDate   DateTime
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}